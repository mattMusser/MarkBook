.container
	%h1 Topics
	%br
	.row
		.col-md-8
			- @topics.each do |topic|
				.media
					%h4.media-heading
						%i.fa.fa-angle-dougle-right
						= link_to topic.title, topic
						- if user_signed_in?
							\-
							\#{link_to "Delete", topic, method: :delete, class: 'btn btn-xs btn-danger'}
		.col-md-4
			- if user_signed_in?
				= link_to "New Topic", new_topic_path, class: 'btn btn-md btn-success'