%nav.navbar.navbar-default
	.container-fluid
		.navbar-header
			%button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#navbar-collapse", "data-toggle" => "collapse", :type => "button"}
				%span.sr-only Toggle navigation
				%span.icon-bar
			%span.navbar-brand
				MarkShare
			-#	= link_to "MarkShare", root_path
			#navbar-collapse.collapse.navbar-collapse
				%ul.nav.navbar-nav
					%li.active
					-#	=link_to "Home", root_path, class: "nav-link"
				- if user_signed_in?
					.userDropDown
						%ul.navbar-nav
							%li.nav-item.dropdown
								%a#navbarDropDownMenuLink.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => ""}
									%strong= current_user.email
								.dropdown-menu.bg-faded.dropdown-menu-right{"aria-labelledby" => "navbarDropDownMenuLink"}
									= link_to 'Edit Profile', edit_user_registration_path, :class => 'dropdown-item'
									= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'dropdown-item'
				- else
					.navbar-text
						=link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'
						\-
						\#{link_to "Sign In", new_user_session_path, :class => 'navbar-link'}